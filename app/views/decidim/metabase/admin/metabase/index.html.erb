<div class="card" id="metabase">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t "decidim.admin.metabase.title" %>
    </h2>
  </div>
  <div class="card-section">
    <% if metabase_enabled? %>
      <% if urls.blank? %>
        <h3><%= t("decidim.admin.metabase.not_found") %></h3>
      <% else %>
        <%= render partial: "dashboards", locals: { iframe_height: "1200px" } %>
      <% end %>
    <% else %>
      <p><%= t("decidim.admin.metabase.disabled") %></p>
    <% end %>
  </div>
</div>
