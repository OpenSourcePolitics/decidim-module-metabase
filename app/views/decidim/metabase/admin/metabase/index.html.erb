<div class="card" id="metabase">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t "decidim.admin.metabase.title" %>
    </h2>
  </div>
  <div class="card-section">
    <% if metabase_enabled? %>
      <% if urls.blank? %>
        <h3><%= t("decidim.admin.metabase.not_found") %></h3>
      <% else %>
        <% urls.each_with_index do |url, index| %>
          <iframe src="<%= url %>" data-dashboard="<%= index %>"
                  width="100%"
                  height="4200px">
          </iframe>
        <% end %>
      <% end %>
    <% else %>
      <p><%= t("decidim.admin.metabase.disabled") %></p>
    <% end %>
  </div>
</div>
